<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView.Active" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.OnlineStore.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="endIconDrawable">@drawable/close_icon</item>
        <item name="android:paddingTop">@dimen/dim_16</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dim_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dim_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dim_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/dim_8</item>
        <item name="boxStrokeWidth">@dimen/dim_0</item>
        <item name="boxStrokeWidthFocused">@dimen/dim_0</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="Theme.OnlineStore.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingVertical">17dp</item>
    </style>

    <style name="Theme.OnlineStore.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dim_8</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/button_color_selector</item>
    </style>

    <style name="Theme.OnlineStore.Button.Logout" parent="Theme.OnlineStore.Button">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:radius">@dimen/dim_8</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.OnlineStore.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/dim_0</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="cornerRadius">@dimen/dim_8</item>
    </style>

</resources>
