<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorSecondary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/light_pink</item>
        <item name="colorSecondaryVariant">@color/light_pink</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <!-- Action bar. -->
        <item name="actionBarSize">@dimen/dim_40</item>
        <item name="android:actionBarSize">@dimen/dim_40</item>

    </style>

</resources>
